  replicas: 1
  template:
    metadata:
      labels:
        name: carts-db
    spec:
      serviceAccountName: sock-shop
      containers:
      - name: carts-db
        image: {% if plugins['sock-shop']['installation']['registry'] is defined and plugins['sock-shop']['installation']['registry']|length %}{{ plugins['sock-shop']['installation']['registry'] }}/{% endif %}{{ plugins['sock-shop']['carts-db']['image'] }}
