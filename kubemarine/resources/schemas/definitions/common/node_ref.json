{
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "DeprecatedRole": {
      "enum": ["worker", "control-plane", "master", "balancer"]
    },
    "Role": {
      "enum": ["worker", "control-plane", "balancer"]
    },
    "Kubernetes": {
      "enum": ["worker", "control-plane"]
    },
    "ControlPlane": {
      "enum": ["control-plane"]
    },
    "DeprecatedRoles": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/DeprecatedRole"
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "Roles": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Role"
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "KubernetesRoles": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Kubernetes"
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "ControlPlanes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ControlPlane"
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "Name": {
      "type": "string"
    },
    "Names": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Name"
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "OneOfNodesGroupsSpec": {
      "oneOf": [
        {"$ref": "#/definitions/GroupsSpec"},
        {"$ref": "#/definitions/NodesSpec"}
      ]
    },
    "AnyOfNodesGroupsSpec": {
      "anyOf": [
        {"$ref": "#/definitions/GroupsSpec"},
        {"$ref": "#/definitions/NodesSpec"}
      ]
    },
    "GroupsSpec": {
      "type": "object",
      "properties": {
        "groups": {
          "type": "array"
        }
      },
      "required": ["groups"]
    },
    "NodesSpec": {
      "type": "object",
      "properties": {
        "nodes": {
          "type": "array"
        }
      },
      "required": ["nodes"]
    }
  }
}
