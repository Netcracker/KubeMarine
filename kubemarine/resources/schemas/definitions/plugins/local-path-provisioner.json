{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "allOf": [{"$ref": "generic_plugin.json#/definitions/Properties"}],
  "properties": {
    "image": {
      "type": "string",
      "default": "rancher/local-path-provisioner:v0.0.23"
    },
    "storage-class": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "local-path"
        },
        "is-default": {
          "type": ["string", "boolean"],
          "default": "'false'"
        }
      },
      "additionalProperties": false
    },
    "volume-dir": {
      "type": "string",
      "default": "/opt/local-path-provisioner"
    },
    "tolerations": {
      "$ref": "generic_plugin.json#/definitions/CustomTolerations"
    },
    "helper-pod-image": {
      "type": "string",
      "default": "library/busybox:1.35.0"
    }
  },
  "propertyNames": {
    "anyOf": [
      {"$ref": "generic_plugin.json#/definitions/PropertyNames"},
      {"enum": ["image", "storage-class", "volume-dir", "tolerations", "helper-pod-image"]}
    ]
  }
}
