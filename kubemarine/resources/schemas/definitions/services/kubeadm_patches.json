{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "description": "Override the original settings for patches of control-plane pods and kubelet",
  "additionalProperties": false,
  "properties": {
    "apiServer": {
      "$ref": "#/definitions/control-plane-pod-patch"
    },
    "etcd": {
      "$ref": "#/definitions/control-plane-pod-patch"
    },
    "controllerManager": {
      "$ref": "#/definitions/control-plane-pod-patch"
    },
    "scheduler": {
      "$ref": "#/definitions/control-plane-pod-patch"
    },
    "kubelet": {
      "$ref": "#/definitions/kubelet-patch"
    }
  },
  "definitions": {
    "control-plane-pod-patch": {
      "type": "array",
      "description": "Patches for control-plane pods",
      "minItems": 0,
      "items": {
        "anyOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "groups": {
              "type": "array",
              "items": {
                "enum": ["control-plane"]
              }
            },
            "patch": {
              "type": "object",
              "properties": {
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "nodes": {
              "type": "array",
              "items": [ 
                {
                  "type": "string"
                }
              ]
            },
            "patch": {
              "type": "object",
              "properties": {
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          }
        }
      ]
      }
    },
    "kubelet-patch": {
      "type": "array",
      "description": "Patches for kubelet",
      "minItems": 0,
      "items": {
        "anyOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "groups": {
              "type": "array",
              "items": {
                "enum": ["control-plane", "worker"]
              }
            },
            "patch": {
              "type": "object",
              "properties": {
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "nodes": {
              "type": "array",
              "items": [
                {
                  "type": "string"
                }
              ]
            },
            "patch": {
              "type": "object",
              "properties": {
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          }
        }
      ]
      }
    }
  }
}

