{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "pod-security": {
      "enum": ["enabled", "disabled"],
      "default": "enabled"
    },
    "oob-policies": {
      "$ref": "#/definitions/OOBPolicies"
    },
    "custom-policies": {
      "$ref": "#/definitions/CustomPolicies"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "OOBPolicies": {
      "type": "object",
      "properties": {
        "default": {
          "enum": ["enabled", "disabled"],
          "default": "enabled"
        },
        "host-network": {
          "enum": ["enabled", "disabled"],
          "default": "enabled"
        },
        "anyuid": {
          "enum": ["enabled", "disabled"],
          "default": "enabled"
        }
      },
      "additionalProperties": false
    },
    "CustomPolicies": {
      "type": "object",
      "properties": {
        "psp-list": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PodSecurityPolicy"
          }
        },
        "roles-list": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Roles"
          }
        },
        "bindings-list": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RoleBindings"
          }
        }
      },
      "additionalProperties": false
    },
    "PodSecurityPolicy": {
      "type": "object",
      "properties": {
        "apiVersion": {"type": "string", "default": "policy/v1beta1"},
        "kind": {"enum": ["PodSecurityPolicy"], "default": "PodSecurityPolicy"},
        "metadata": {
          "type": "object",
          "properties": {
            "name": {"type": "string"}
          },
          "required": ["name"]
        },
        "spec": {"type": "object"}
      },
      "required": ["apiVersion", "kind", "metadata"]
    },
    "Roles": {
      "type": "object",
      "properties": {
        "apiVersion": {"type": "string", "default": "rbac.authorization.k8s.io/v1"},
        "kind": {"enum": ["Role", "ClusterRole"]},
        "metadata": {
          "type": "object",
          "properties": {
            "name": {"type": "string"}
          },
          "required": ["name"]
        },
        "rules": {"$ref": "../common/utils.json#/definitions/ArrayOfObjects"}
      },
      "required": ["apiVersion", "kind", "metadata"]
    },
    "RoleBindings": {
      "type": "object",
      "properties": {
        "apiVersion": {"type": "string", "default": "rbac.authorization.k8s.io/v1"},
        "kind": {"enum": ["RoleBinding", "ClusterRoleBinding"]},
        "metadata": {
          "type": "object",
          "properties": {
            "name": {"type": "string"}
          },
          "required": ["name"]
        },
        "roleRef": {"type": "object"},
        "subjects": {"$ref": "../common/utils.json#/definitions/ArrayOfObjects"}
      },
      "required": ["apiVersion", "kind", "metadata"]
    }
  }
}
