        },
        "add-policies": {
          "$ref": "definitions/rbac/psp.json#/definitions/CustomPolicies"
        },
        "delete-policies": {
          "$ref": "definitions/rbac/psp.json#/definitions/CustomPolicies"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["apiVersion", "psp"],
  "additionalProperties": false
}
