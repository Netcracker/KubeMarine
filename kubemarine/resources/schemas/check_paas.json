{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string",
      "description": "API version defines the set of supported inventory sections, properties, and values.",
      "enum": ["v1"]
    },
    "geo-monitor": {
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string"
        },
        "service": {
          "type": "string"
        }
      },
      "required": ["namespace", "service"],
      "additionalProperties": false
    }
  },
  "required": ["apiVersion"],
  "additionalProperties": false
}
