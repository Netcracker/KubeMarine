{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "definitions/node.json"
      }
    },
    "node_defaults": {
      "$ref": "definitions/node_defaults.json"
    },
    "cluster_name": {
      "type": "string"
    },
    "control_plain": {
      "type": "object",
      "properties": {
        "internal": {
          "type": "string"
        },
        "external": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "public_cluster_ip": {
      "type": "string",
      "default": "'{{ control_plain.external }}'"
    },
    "registry": {
      "$ref": "definitions/registry.json"
    },
    "gateway_nodes": {
      "type": "array",
      "items": {
        "$ref": "definitions/gateway_node.json"
      }
    },
    "vrrp_ips": {
      "type": "array",
      "items": {
        "$ref": "definitions/vrrp_ip.json"
      }
    },
    "services": {
      "$ref": "definitions/services.json"
    },
    "rbac": {
      "$ref": "definitions/rbac.json"
    },
    "plugin_defaults": {
      "$ref": "definitions/plugin_defaults.json"
    },
    "plugins": {
      "$ref": "definitions/plugins.json"
    },
    "timeout_download": {
      "type": "integer",
      "default": 60
    },
    "procedure_history": {
      "type": "object",
      "properties": {
        "archive_threshold": {
          "type": "integer",
          "default": 5
        },
        "delete_threshold": {
          "type": "integer",
          "default": 10
        }
      },
      "additionalProperties": false
    },
    "values": {
      "type": "object",
      "description": "Section to hold custom variables to be used in Jinja2 templates."
    }
  },
  "required": ["nodes", "cluster_name"],
  "additionalProperties": false
}
